  <!--
    In this file: array as the payload; label and description specified for the columns.
    The file has no particular focus on observation metadata.
  -->
  
	<om:type xlink:href="http://www.opengis.net/def/observationType/OGC-OM/2.0/OM_ComplexObservation"/>
	<om:phenomenonTime>
		<gml:TimeInstant gml:id="phenotime">
			<gml:timePosition>2020-02-21T12:44:00Z</gml:timePosition>
		</gml:TimeInstant>
	</om:phenomenonTime>
	<om:resultTime>
    <gml:TimeInstant gml:id="resulttime">
			<gml:timePosition>2020-02-21T12:44:00Z</gml:timePosition>
		</gml:TimeInstant>
  </om:resultTime>
  
  <!-- The observation XML schema require these metadata fields. -->
  <om:procedure xlink:type="simple" xlink:title=""/>
  <om:observedProperty xlink:type="simple" xlink:title=""/>
  <om:featureOfInterest xlink:type="simple" xlink:title=""/>
  
	<om:result xsi:type="swe:DataArrayType">
    <!-- The schema requires the "elementCount" element but nothing inside it -->
    <swe:elementCount></swe:elementCount>
    <swe:elementType name="columns"> <!-- XML schema requires this. This must be a valid NCName. -->
      <swe:DataRecord>
        <swe:field name="BooleanCol">
          <swe:Boolean>
            <swe:label>Boolean col</swe:label>
            <swe:description>Boolean desc</swe:description>
          </swe:Boolean>
        </swe:field>
        <swe:field name="TimeCol">
          <swe:Time>
            <!-- For some reason, the schema requires the "uom" element -->
            <swe:uom/>
            <swe:label>Time col</swe:label>
            <swe:description>Time desc</swe:description>
          </swe:Time>
        </swe:field>
        <swe:field name="CountCol">
          <swe:Count>
            <swe:label>Count col</swe:label>
            <swe:description>Count desc</swe:description>
          </swe:Count>
        </swe:field>
        <swe:field name="MeasurementCol">
          <swe:Quantity>
            <swe:label>Measurement col</swe:label>
            <swe:description>Measurement desc</swe:description>
            <swe:uom code="cm"/>
          </swe:Quantity>
        </swe:field>
        <swe:field name="TextCol">
          <swe:Text>
            <swe:label>Text col</swe:label>
            <swe:description>Text desc</swe:description>
          </swe:Text>
        </swe:field>
      </swe:DataRecord>
    </swe:elementType>
    <swe:values>
      <co:Array> <!-- This array is a COCOP extension to standards -->
        <co:Row>
          <co:I>true</co:I><co:I>2018-02-06T09:58:44.00Z</co:I><co:I>3</co:I><co:I>-0.12</co:I><co:I>abc</co:I>
        </co:Row>
        <co:Row>
          <co:I>false</co:I><co:I>2018-02-06T09:58:45.00Z</co:I><co:I>-5</co:I><co:I>14</co:I><co:I></co:I>
        </co:Row>
      </co:Array>
    </swe:values>
  </om:result>
</om:OM_Observation>
