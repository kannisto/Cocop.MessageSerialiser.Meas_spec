  <!--
    In this file: a response to a request to retrieve the status of a task.
  -->
  <!--
    This file focuses on GetStatusResponse; the StatusReport element
    has a more thorough example in another file.
  -->
  
  <swes:extension xsi:type="swe:DataRecordPropertyType">
    <swe:DataRecord>
      <swe:identifier>cocop/requestresult</swe:identifier>
      <swe:field name="result">
        <swe:Category>
          <swe:value>Ok</swe:value>
        </swe:Category>
      </swe:field>
      <swe:field name="message">
        <swe:Text>
          <swe:value></swe:value>
        </swe:Text>
      </swe:field>
    </swe:DataRecord>
	</swes:extension>
  
  <!--
  The first status message indicates the task was accepted.
  The second message indicates it is in execution.
  -->
  <sps:status>
    <sps:StatusReport>
      <sps:task>mytask</sps:task>
      <sps:procedure>myproc</sps:procedure>
      <sps:requestStatus>Accepted</sps:requestStatus>
      <sps:taskStatus>Reserved</sps:taskStatus>
      <sps:updateTime>2020-01-01T11:00:00Z</sps:updateTime>
    </sps:StatusReport>
  </sps:status>
  <sps:status>
    <sps:StatusReport>
      <sps:task>mytask</sps:task>
      <sps:procedure>myproc</sps:procedure>
      <sps:requestStatus>Accepted</sps:requestStatus>
      <sps:taskStatus>InExecution</sps:taskStatus>
      <sps:updateTime>2020-01-01T11:09:00Z</sps:updateTime>
    </sps:StatusReport>
  </sps:status>
  
</sps:GetStatusResponse>
