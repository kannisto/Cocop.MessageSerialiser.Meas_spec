  <!--
    In this file: time series data with a constant sampling interval.
    The file has no particular focus on observation metadata.
  -->
  
  <om:type xlink:href="cocop/observationType/TimeSeriesConstant"/>
  
  <om:phenomenonTime>
		<gml:TimeInstant
			gml:id="time-101">
			<gml:timePosition>2020-02-21T12:44:00Z</gml:timePosition>
		</gml:TimeInstant>
	</om:phenomenonTime>
	<om:resultTime>
		<gml:TimeInstant
			gml:id="time-102">
			<gml:timePosition>2020-02-21T12:44:00Z</gml:timePosition>
		</gml:TimeInstant>
  </om:resultTime>
  
  <!-- The observation XML schema require these metadata fields. -->
  <om:procedure xlink:type="simple" xlink:title=""/>
  <om:observedProperty xlink:type="simple" xlink:title=""/>
  <om:featureOfInterest xlink:type="simple" xlink:title=""/>
  
  <om:result xsi:type="tsml:TimeseriesDomainRangeType" gml:id="domain-range-1">
    
    <gml:description>Example</gml:description>
    <gml:domainSet>
      <!--
      The domainSet element is required (gml:AbstractCoverageType).
      It should also have either contents or a reference, but there is no way to 
      refer to metadata where the actual domain (the time range) is given.
      This approach seems to violate the purpose of the schema.
      However, only TimeseriesTVP supports a constant measurement interval, and 
      its value structure has a huge overhead compared to this.
      In addition, it is better to use existing structures than to specify
      a proprietary extension.
      -->
    </gml:domainSet>
    <gml:rangeSet>
      <gml:QuantityList uom="Cel"> 19.2 22.9 24.5 18.3 </gml:QuantityList>
    </gml:rangeSet>
    <gmlcov:rangeType>
      <!-- The rangeType element is required but enclosed data record is optional -->
    </gmlcov:rangeType>
    
    <!--
      The OGC example "timeseries-domain-range-example.xml" uses the gmlcov:metadata
      field instead of this. However, this approach is better typed (no extension 
      elements used) and has one less of XML element layers.
    -->
    <tsml:metadata>
      <tsml:TimeseriesMetadataExtension>
        
        <tsml:timeseriesMetadata>
          <!-- To find an example about metadata, see "tsml/1.0.0/examples/measurement-timeseries-min-daily-discharge-monthly.xml" -->
          <tsml:TimeseriesMetadata>
            <tsml:baseTime>2020-02-21T12:00:00Z</tsml:baseTime>
            <tsml:spacing>PT1H</tsml:spacing>
          </tsml:TimeseriesMetadata>
        </tsml:timeseriesMetadata>
        
        <tsml:annotation>
          <tsml:AnnotationCoverage gml:id="quality-1">
            <!-- The schema requires a domainSet element (gml:AbstractCoverageType) -->
            <gml:domainSet />
            <gml:rangeSet>
              <gml:CategoryList codeSpace="http://cocop"> bad/equipmentfailure good good bad</gml:CategoryList>
            </gml:rangeSet>
            <gmlcov:rangeType/>
          </tsml:AnnotationCoverage>
        </tsml:annotation>
        
      </tsml:TimeseriesMetadataExtension>
    </tsml:metadata>
    
  </om:result>
  
</om:OM_Observation>
